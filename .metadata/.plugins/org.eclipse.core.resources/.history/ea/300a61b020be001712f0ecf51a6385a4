package state;

import java.util.Random;

public class Aim {
	private int flagsPosition;
	private Random randomPosition;
	
	public Aim(){
		flagsPosition = -1;
		randomPosition = new Random();
	}
	
	public int getFlagsPosition() {
		return flagsPosition;
	}
	public Random getRandomPosition() {
		return randomPosition;
	}
	public void setFlagsPosition(int flagsPosition) {
		this.flagsPosition = flagsPosition;
	}
	public void setRandomPosition(Random randomPosition) {
		this.randomPosition = randomPosition;
	}
	
}

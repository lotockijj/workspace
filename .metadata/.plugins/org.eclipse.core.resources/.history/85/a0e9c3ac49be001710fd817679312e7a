package model;

import java.util.List;

public class Radar extends Droid{
	private List<Droid> list; 
	
	public Radar(String name, int health, int energy, int power, int price, boolean flag) {
		super(name, health, energy, power, price, flag);
	}

	@Override
	public void performance(List<Droid> droids) {
		int flagPosition = -1;
		for (int i = 0; i < droids.size(); i++) {
			if(droids.get(i).getFlag() == true){
				flagPosition = i;
			}
			notifyDroids(flagPosition);
		}
	}

	private void notifyDroids(int flagPosition) {
		System.out.println("Team is notified that flag is in position: " + flagPosition);
		for (int i = 0; i < list.size(); i++) {
			list.get(i).getAim().setFlagsPosition(flagPosition);
		}
	}

	@Override
	public void getShot(int power) {
		setHealth(getHealth() - power); 
	}

	public void setList(List<Droid> list) {
		this.list = list;
	}
	
}

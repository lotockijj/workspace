package factory;

import java.util.LinkedList;
import java.util.List;

import model.Droid;
import model.Fighter;

public class TeamOfDroids {
	List<Droid> firstTeam;
	List<Droid> secondTeam;
	
	public TeamOfDroids(){
		firstTeam = new LinkedList<>();
		secondTeam = new LinkedList<>();
		initializeTeams();
	}
	
	private void initializeTeams(){
		initializeFirstTeam();
		initializeSecondTeam();
	}

	private void initializeFirstTeam() {
		for (int i = 0; i < 5; i++) {
			String n = Integer.toString(i);
			firstTeam.add(new Fighter(n, 4, 10, 2, 1, false));
		}
		firstTeam.get(4).setFlag(true);
	}
	
	private void initializeSecondTeam(){
		for (int i = 5; i < 10; i++) {
			String n = Integer.toString(i);
			secondTeam.add(new Fighter(n, 4, 10, 2, 1, false));
		}
		secondTeam.get(4).setFlag(true);
	}

	public List<Droid> getFirstTeam() {
		return firstTeam;
	}

	public List<Droid> getSecondTeam() {
		return secondTeam;
	}

}

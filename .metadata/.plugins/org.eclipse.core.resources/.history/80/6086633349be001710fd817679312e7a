package model;

import java.util.List;

public class Destroyer extends Droid {
	
	public Destroyer(String name, int health, int energy, int power, int price, boolean flag) {
		super(name, health, energy, power, price, flag);
	}

	@Override
	public void performance(List<Droid> droids) {
		int chosenDroid = getAim().getFlagsPosition(droids.size());
		droids.remove(chosenDroid);
		System.out.println(droids.get(chosenDroid).getName() + 
				" health: " + droids.get(chosenDroid).getHealth() + ", was hit by " + 
				getName());
	}
	
	@Override
	public void getShot(int power) {
		setHealth(getHealth() - power); 
	}

}

package ekkel._17_10_2017;

import java.io.BufferedReader;

public class Terminate{
	static BufferedReader in ;  static int quit=0;

	public void run(){
		String msg = null;
		while(true){
			try{
				msg=in.readLine();
			}catch(Exception e){}

			if(msg.equals("q")) {
				quit=1;break;
			}
		}
	}
	public static void main(String[] args) {
		Thread t = new Thread(new Runnable(){
			@Override
			public void run() {
				int i = 0;
				while(true){
					if(quit==1) break;
					System.out.println("Hello" + i++);
				}
			}
		});
		t.start();
	}

}

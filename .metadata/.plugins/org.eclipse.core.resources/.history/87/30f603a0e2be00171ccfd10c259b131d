package state;

import java.util.Random;

public class Aim {
	private int flagPosition;
	private Random randomLocation;
	
	public Aim(){
		flagPosition = -1;
		randomLocation = new Random();
	}
	
	public int getFlagsPosition(int sumOfDroids) {
		if(flagPosition == -1){
			return randomLocation.nextInt(sumOfDroids);
		}
		return flagPosition;
	}
	
	public void setFlagsPosition(int flagPosition) {
		this.flagPosition = flagPosition;
	}
	
}

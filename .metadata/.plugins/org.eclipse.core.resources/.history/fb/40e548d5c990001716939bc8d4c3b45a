package com.epam;

public class PowerOfTwo {
	
	public static String isNumberPowerOfTwo(double n){
		if(n == 2){
			return "Yes";
		} else if(n == 1){
			return "No";
		} else if(n < 1){
			return "No";
		} else {
			isNumberPowerOfTwo(n/2);
		} 
		return "Yes";
	}
	
	public static void isNumberPowerOfTwoAttemptTwo(double n){
		if(n == 2){
			System.out.println("Yes");
		} else if(n == 1){
			System.out.println("No");
		} else if(n < 1){
			System.out.println("No");
		} else {
			isNumberPowerOfTwo(n/2);
		} 
	}

}

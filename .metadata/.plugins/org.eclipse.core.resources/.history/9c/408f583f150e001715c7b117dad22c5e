package com.main;

import org.springframework.context.ApplicationContext;
import org.springframework.context.support.ClassPathXmlApplicationContext;

public class DrawingApp {

	public static void main(String[] args) {
		//Triangle triangle = new Triangle();
		//BeanFactory factory = new XmlBeanFactory(new FileSystemResource("spring.xml"));
		ApplicationContext context = new ClassPathXmlApplicationContext("spring.xml");
		Triangle triangle = (Triangle) context.getBean("triangle");
		Triangle2 triangle2 = (Triangle2) context.getBean("triangler-alias");
		Triangle3 triangle3 = (Triangle3) context.getBean("triangle3");
		Triangle2 triangle4 = (Triangle2) context.getBean("triangle4");
		triangle.draw();
		triangle2.draw();
		triangle3.draw();
		System.out.println("\"Autowiring:\" ");
		triangle4.draw();
		Triangle2 triangle6 = (Triangle2) context.getBean("triangle6");
		System.out.println("Triangle6: ");
		triangle6.draw();
	}

}

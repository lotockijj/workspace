package model;

public abstract class Droid{
	private String name;
	private int health;
	private int energy;
	private int power;
	private int level;
	
	public Droid(String name, int health, int energy, int power, int level) {
		this.name = name;
		this.health = health;
		this.energy = energy;
		this.power = power;
		this.level = level;
	}
	
	public abstract void performance(Droid droid);
	
	public void getShot(int power) {
		health -= power; 
	}


	public String getName() {
		return name;
	}

	public int getHealth() {
		return health;
	}

	public int getEnergy() {
		return energy;
	}

	public int getPower() {
		return power;
	}

	public int getLevel() {
		return level;
	}

	public void setName(String name) {
		this.name = name;
	}

	public void setHealth(int health) {
		this.health = health;
	}

	public void setEnergy(int energy) {
		this.energy = energy;
	}

	public void setPower(int power) {
		this.power = power;
	}

	public void setLevel(int level) {
		this.level = level;
	}
	
	
    
}

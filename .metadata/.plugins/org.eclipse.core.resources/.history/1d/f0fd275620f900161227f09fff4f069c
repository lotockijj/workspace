package gui;

import javafx.geometry.Insets;
import javafx.geometry.Pos;
import javafx.geometry.Rectangle2D;
import javafx.scene.Scene;
import javafx.scene.control.Label;
import javafx.scene.control.TextField;
import javafx.scene.layout.BorderPane;
import javafx.scene.layout.HBox;
import javafx.scene.layout.Priority;
import javafx.scene.layout.VBox;
import javafx.stage.Screen;
import javafx.stage.Stage;

public class Login extends Stage {

	public Login() {

		Label labelUser = new Label("User:");
		labelUser.setAlignment(Pos.CENTER_LEFT);
		HBox userHB = new HBox();
		userHB.getChildren().add(labelUser);
		
		TextField textFieldUser = new TextField();
		textFieldUser.setAlignment(Pos.CENTER_RIGHT);
		HBox userHB2 = new HBox();
		userHB2.getChildren().add(textFieldUser);
		
		HBox mainBox = new HBox();
		mainBox.prefWidth(1000);
		HBox.setHgrow(userHB, Priority.ALWAYS);
		mainBox.getChildren().addAll(userHB, userHB2);
		
		Label labelPassword = new Label("Password:");
		labelPassword.setAlignment(Pos.CENTER_LEFT);
		HBox passwordHB = new HBox();
		passwordHB.getChildren().add(labelUser);
		
		TextField textFieldPassword = new TextField();
		textFieldPassword.setAlignment(Pos.CENTER_RIGHT);
		HBox passwordHB2 = new HBox();
		passwordHB2.getChildren().add(textFieldUser);
		
		HBox mainBox2 = new HBox();
		mainBox.prefWidth(1000);
		HBox.setHgrow(userHB, Priority.ALWAYS);
		mainBox.getChildren().addAll(passwordHB, passwordHB2);
		
		VBox vBox = new VBox();
		vBox.prefWidth(1000);
		vBox.getChildren().addAll(mainBox, mainBox2);


		BorderPane layout = new BorderPane();/* layout */
		layout.setCenter(vBox);
		//		layout.setBottom(hBoxForButton);

		Scene scene = new Scene(layout, 300, 250);
		this.setScene(scene);
		this.setTitle("User login.");
		this.centerOnScreen();
		// this locate you stage title in the center.
		Rectangle2D primScreenBounds = Screen.getPrimary().getVisualBounds();
		this.setX((primScreenBounds.getWidth() -  this.getWidth()) / 2);
		this.setY((primScreenBounds.getHeight() - this.getHeight()) / 2);
	}

}
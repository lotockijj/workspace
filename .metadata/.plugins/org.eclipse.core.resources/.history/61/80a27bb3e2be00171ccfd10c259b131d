package model;

import java.util.List;

public class Radar extends Droid{
	private List<Droid> list; 
	
	public Radar(String name, int health, int energy, int power, int price, boolean flag) {
		super(name, health, energy, power, price, flag);
	}

	@Override
	public void performance(List<Droid> droids) {
		int flagLogation = -1;
		for (int i = 0; i < droids.size(); i++) {
			if(droids.get(i).getFlag() == true){
				flagLogation = i;
			}
		}
		notifyDroids(flagLogation);
	}

	private void notifyDroids(int flagLocation) {
		System.out.println("Team is notified that flag is in the position: " + flagLocation);
		for (int i = 0; i < list.size(); i++) {
			list.get(i).getAim().setFlagsPosition(flagLocation);
		}
	}

	public void setList(List<Droid> list) {
		this.list = list;
	}
	
}

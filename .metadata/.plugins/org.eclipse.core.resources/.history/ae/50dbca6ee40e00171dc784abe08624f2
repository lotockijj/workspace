package com.main;

import org.springframework.context.support.AbstractApplicationContext;
import org.springframework.context.support.ClassPathXmlApplicationContext;

public class DrawingApp {

	public static void main(String[] args) {
		//Triangle triangle = new Triangle();
		//BeanFactory factory = new XmlBeanFactory(new FileSystemResource("spring.xml"));
		AbstractApplicationContext context = new ClassPathXmlApplicationContext("spring.xml");
		context.registerShutdownHook();
		Shape shape = (Triangle) context.getBean("triangle");
		Shape triangle2 = (Triangle2) context.getBean("triangler-alias");
		Shape triangle3 = (Triangle3) context.getBean("triangle3");
		Shape triangle4 = (Triangle2) context.getBean("triangle4");
		shape.draw();
		triangle2.draw();
		triangle3.draw();
		System.out.println("\"Autowiring:\" ");
		triangle4.draw();
		Shape triangle6 = (Triangle2) context.getBean("triangle6");
		System.out.println("Triangle6: ");
		triangle6.draw();
		Shape triangle7 = (Triangle3) context.getBean("triangle7");
		System.out.println("Triangle7: ");
		triangle7.draw();
		Shape circle = (Circle) context.getBean("circle");
		circle.draw();
		context.close();
	}

}

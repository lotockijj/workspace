//			if ((result.isPresent()) && (result.get() == ButtonType.OK)) {
//				if(updateMode){
//					fabDAO.updateGoods(tempGoods, faberlicGoods.selectedId);
//				} else {
//					fabDAO.addGoods(tempGoods);
//				}
//				this.getScene().getWindow().hide();
//				close();
//				faberlicGoods.refreshFaberlicGoods();
